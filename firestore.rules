rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // REGLA 1: Para la colección principal de cursos
    match /cursos/{cursoId} {
      allow read: if request.auth != null;
    }

    // REGLA 2: Para la sub-colección de módulos
    match /cursos/{cursoId}/modulos/{moduloId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.ownerUID == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerUID == request.auth.uid;

      // --- REGLA 3: Para la sub-colección de ejercicios (CORREGIDA) ---
      match /ejercicios/{ejercicioId} {
        
        allow read: if request.auth != null;

        // CREATE: Permite crear si el usuario está autenticado y se establece a sí mismo como propietario en el nuevo documento.
        // Esta es la versión más limpia y robusta.
        allow create: if request.auth != null && request.resource.data.ownerUID == request.auth.uid;

        // UPDATE / DELETE: Permite modificar o borrar solo si el usuario es el propietario del ejercicio existente.
        allow update, delete: if request.auth != null && resource.data.ownerUID == request.auth.uid;
      }
    }
  }
}
