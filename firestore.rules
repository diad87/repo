rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGLAS PARA EL PANEL DE ADMINISTRACIÓN ---

    // Permite a los admins LEER la lista de cursos y módulos
    match /cursos/{cursoId} {
      allow read: if request.auth.token.admin == true;
    }

    match /cursos/{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
    
    match /cursos/{cursoId}/modulos/{moduloId} {
      allow read, update, delete: if request.auth.token.admin == true;

      // REGLA CLAVE: Permite a los admins CREAR, LEER y ESCRIBIR
      // en la subcolección de ejercicios.
      match /ejercicios/{ejercicioId} {
        allow read, create, write, delete: if request.auth.token.admin == true;
      }
    }

    // --- TUS REGLAS EXISTENTES ---

    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    match /perfilesUsuarios/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    match /duelos/{dueloId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }
  }
}