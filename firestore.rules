rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =============================================================
    // REGLA ÚNICA Y CORRECTA PARA TODA LA GESTIÓN DE CURSOS
    // =============================================================
    // Esta única regla da a los administradores acceso total (leer y escribir)
    // a la colección 'cursos' y a CUALQUIER documento o subcolección
    // que haya dentro de ella (módulos, ejercicios, etc.).
    match /cursos/{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    // =============================================================
    // TUS OTRAS REGLAS PARA USUARIOS NORMALES
    // =============================================================

    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    match /perfilesUsuarios/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    match /duelos/{dueloId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }
  }
}