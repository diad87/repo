rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // REGLA PARA LA COLECCIÓN DE CURSOS, MÓDULOS Y EJERCICIOS
    // Permite la lectura a cualquier usuario autenticado. La escritura se gestiona
    // por los 'dueños'. Idealmente, se debería restringir a admins en el futuro.
    match /cursos/{cursoId} {
      allow read: if request.auth != null;

      match /modulos/{moduloId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.ownerUID == request.auth.uid;
        allow update, delete: if request.auth != null && resource.data.ownerUID == request.auth.uid;

        match /ejercicios/{ejercicioId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null && request.resource.data.ownerUID == request.auth.uid;
          allow update, delete: if request.auth != null && resource.data.ownerUID == request.auth.uid;
        }
      }
    }

    // REGLA PARA LA COLECCIÓN DE RESULTADOS DE LOS EJERCICIOS
    // Permite a cualquier usuario logueado crear sus propios resultados,
    // pero nadie puede leerlos o modificarlos desde el cliente. Soluciona el error de permisos.
    match /resultados/{resultadoId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // REGLA PARA LA COLECCIÓN DE USUARIOS Y SUS DATOS DE PERFIL/ESTADÍSTICAS
    // Un usuario solo puede leer o escribir su propia información.
    // Esencial para el sistema de dificultad adaptativa.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Regla para la subcolección de estadísticas (Perfil de Ritmo)
      match /stats/{statId} {
        // Un usuario puede leer (get, list) y escribir (create, update)
        // únicamente sus propias estadísticas.
        allow read, write: if request.auth.uid == userId;
      }

      // Regla para la subcolección del progreso de las lecciones
      match /progresoLecciones/{leccionId} {
        // Un usuario solo puede leer y escribir el progreso de SUS PROPIAS lecciones.
        allow read, write: if request.auth.uid == userId;
      }
    }

  }
}