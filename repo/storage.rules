rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Solo admins pueden escribir en module-images/**
    match /module-images/{cursoId}/{allPaths=**} {
      allow read;  // o si quieres solo lectura pública
      allow write: if request.auth != null
                   && request.auth.token.admin == true;
    }
    // Otras reglas…
  }
}